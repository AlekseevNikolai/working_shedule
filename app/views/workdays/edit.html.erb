<div class="modal-header">
  <h5 class="modal-title">Изменить смену</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

  <div class="modal-body">
    <%= form_for(@workday) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="row gx-3 mb-3">
          <div cclass="col-md-6"> 
            <%= f.label :user_id, "Сотрудник", class: "small mb-1" %>
            <%# <%= f.text_field :user_id, class: "form-control", placeholder: "#{current_user.first_name} #{current_user.last_name}" %>
            <%= f.select :user_id, @users, {}, {class: "form-control"} %>
          </div>
          <div class="col-md-6"> 
            <%= f.label :date, "Дата", class: "small mb-1" %>
            <%= f.text_field :date, class: "form-control", placeholder: "#{@workday["date"]}", disabled: true%>
          </div>
          <div class="col-md-6"> 
            <%= f.label :shift_code, "Смена", class: "small mb-1" %>
            <%# <%= f.text_field :shift_code, class: "form-control", placeholder: "ГН24"%>
            <%= f.select :shift_code, @shift_codes, {}, {class: "form-control"} %>
          </div>
        </div>
        <%= link_to "Удалить смену", @workday, method: :delete %>
        <%= f.submit "Изменить смену", class: "btn btn-primary" %>
      <% end %>
  </div>


